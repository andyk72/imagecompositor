{
    "stage": {
        "id":"stage",
        "selectorCanvas":".konvajs-content canvas",
        "stageWidth": "confStageSizes.fitToScreen.width",
        "stageHeight": "confStageSizes.fitToScreen.height",
        "initialEditingScale": {
            "x": 1,
            "y": 1
        },
        "backgroundImage":"/images/background-3.jpg"
    },
    "toolbar": {
        "selector":".toolbar",
        "tools": {
            "save": {
                "selector":".toolbar__tool-save"
            },
            "zoomin": {
                "selector":".toolbar__tool-zoomin",
                "zoomFactor": 0.1
            },
            "zoomout": {
                "selector":".toolbar__tool-zoomout",
                "zoomFactor": 0.1
            },
            "zoom100": {
                "selector":".toolbar__tool-zoom100"
            }
        }
    },
    "menuBackgrounds": {
        "id":"menu-backgrounds",
        "itemSelector":".menu-backgrounds__item__image"
    },
    "menuImages": {
        "id":"menu-images",
        "itemSelector":".menu-images__item__image"
    },
    "menuTools": {
        "id":"menu-tools",
        "itemSelector":".menu-tools__item"
    },
    "inputTextWidget": {
        "selectors": {
            "root":".create-text-widget",
            "input":".create-text-widget__input",
            "fontsize":".create-text-widget__font-size",
            "ok":".create-text-widget__btn-ok",
            "cancel":".create-text-widget__btn-cancel"
        }
    },
    "debug": {
        "enabled":true,
        "selector":".debug-monitor",
        "selectorContent":".debug-monitor__content"
    }
}